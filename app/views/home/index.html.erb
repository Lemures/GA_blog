<% if user_signed_in? %>
<!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Blog.Ly</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= @userFullName %> <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><%= link_to 'New Post', new_user_post_path(@user.id) %></li>
                            <!--<li><a href="#">New Post</a></li>-->
                            <li role="separator" class="divider"></li>
                           <!-- <li><a href="#">Log Out</a></li> -->
                            <li><%= link_to 'Log Out', destroy_user_session_path ,method: :delete %></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><%="#{@user.firstName}'s Blog" %>
                    <small><%= "@#{@user.firstName}" %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Post One -->
      <% @posts.each do |post| %>
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src="http://placehold.it/700x300" alt="">
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= post.post_title %></h3>
                <p><%= post.post_text %></p>
                <a class="btn btn-primary" href="<%= user_post_path(@user.id, post.id) %>">View Post <span class="glyphicon glyphicon-chevron-right"></span></a>

            </div>
        </div>

        <!-- /.row -->

        <hr>
      <% end %>

        <!-- Pagination -->
        <div class="text-center">
            Pagination Here
        </div>
        <!-- /.row -->

        <hr>

        <!-- Footer -->
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p>Copyright &copy; Arun Sood 2015</p>
                </div>
            </div>
            <!-- /.row -->
        </footer>

    </div>

<% end %>